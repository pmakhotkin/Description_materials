<Page x:Class="Техописание_запчастей.View.NokPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Техописание_запчастей.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NokPage"
      Background="White"
      >

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top"  HorizontalAlignment="Center">
            <TextBlock Margin="5,5,0,0" HorizontalAlignment="Center">Запчасти требующие уточнения данных :</TextBlock>
            <ListView x:Name="ListViewMaterial" Background="White" Margin="10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Material"/>
                        <GridViewColumn Header="Decription"/>
                        <GridViewColumn Header="Decription Rus"/>
                        <GridViewColumn Header="Unity"/>
                        <GridViewColumn Header="Link photo"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Margin="17" Width="250" Height="25">Создать техописания с этими данными</Button>

        </StackPanel>
    </Grid>
</Page>
